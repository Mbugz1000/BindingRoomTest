<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemEntity"
            type="com.example.bindingroomtest.TestEntity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/entityItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textViewMargins"
            android:background="@android:color/darker_gray"
            android:padding="@dimen/textViewPadding"
            android:text="@{itemEntity.anything}"
            android:textColor="@android:color/black"
            tools:text="@string/entityList" />
    </LinearLayout>
</layout>